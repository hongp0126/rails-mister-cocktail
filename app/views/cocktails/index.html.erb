<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 500, width: 800, crop: :fill %>')">
        <div class="card-category"><%= cocktail.name %></div>
          <div class="card-description">
            <% cocktail.doses.each do |d| %>
              <p><%= d.ingredient.name %></p>
            <% end %>
          </div>
          <a class="card-link" href="/cocktails/<%= cocktail[:id] %>" ></a>
        </div>
      </div>
    <% end %>

  </div>
</div>
